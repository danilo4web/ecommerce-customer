{
    "name:": "danilo4web/ecommerce-customer",
    "type": "project",
    "description": "Ecommerce Customer Service API",
    "authors": [
        {
            "name": "Danilo Pereira",
            "email": "danilo4web@gmail.com"
        }
    ],
    "require": {
        "php": "^8.0",
        "symfony/dependency-injection": "^4.2",
        "symfony/routing": "^4.2",
        "symfony/http-foundation": "^4.2",
        "symfony/config": "^4.2",
        "symfony/yaml": "^4.2",
        "symfony/http-kernel": "^4.2",
        "symfony/dotenv": "^5.0"
    },
    "autoload": {
        "psr-4": {
            "Ecommerce\\CustomerService\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Ecommerce\\CustomerService\\": "tests"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "phpunit/php-code-coverage": "^9.2.3",
        "squizlabs/php_codesniffer": "3.*"
    },
    "scripts": {
        "test": "phpunit --colors=always",
        "test-coverage-html": "XDEBUG_MODE=coverage phpunit --colors=always --coverage-html code-coverage",
        "check-psr12": "phpcs --standard=PSR12 src"
    }
}
